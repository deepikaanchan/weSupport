{% extends 'base.html.twig' %}

{% block body %}


<div class="container">    
    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Create Ticket</div>
            </div>  
            <div class="panel-body" >
                <form method="post" id="createForm" action = "{{path('create_ticket')}}" autocomplete="off">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('intention') }}">
                    <input type="hidden" id="userName" name="userName" value ="{{user.userName}}">
                            
                    <form  class="form-horizontal" "method="post" >
                        <div id="div_id_dept" class="form-group required">
                           <label for="id_username" class="control-label col-md-4  requiredField">Department </label>
                            <div class="controls col-md-8 ">
                                <input class="input-md  textinput textInput form-control margin-bottom" id="id_dept" maxlength="30" name="department" placeholder="Enter Deparment" type="text" />
                            </div>
                        </div> 
                        <div id="div_id_cat" class="form-group required">
                           <label for="id_category" class="control-label col-md-4  requiredField">Category </label>
                            <div class="controls col-md-8 ">
                                <input class="input-md  textinput textInput form-control margin-bottom" id="id_category" maxlength="30" name="category" placeholder="Enter Category" type="text" />
                            </div>
                        </div>
                         <div id="div_id_sub" class="form-group required">
                           <label for="id_sub" class="control-label col-md-4  requiredField">Subject</label>
                            <div class="controls col-md-8 ">
                                <input class="input-md  textinput textInput form-control margin-bottom" id="id_sub" maxlength="30" name="subject" placeholder="Enter Subject" type="text" />
                            </div>
                        </div>
                        <div id="div_id_desp" class="form-group required">
                            <label for="id_desp" class="control-label col-md-4  requiredField">Description </label>
                            <div class="controls col-md-8 ">
                                <textarea class="input-md  textinput textInput form-control margin-bottom" name ="description" placeholder="Enter Description"></textarea> 
                            </div>
                        </div>
                         <div id="div_id_priority" class="form-group required">
                            <label for="id_priority" class="control-label col-md-4  requiredField">Priority </label>
                            <div class="controls col-md-8 ">
                                <select class="input-md  textinput textInput form-control margin-bottom" id="selectPriority" name="selectedPriority">
                                    <option value="0">Select</option>
                                    <option value="1">High</option>
                                    <option value="2">Medium</option>
                                    <option value="3">Low</option>
                                </select>
                            </div>
                        </div>
                        <div id="div_id_name" class="form-group required">
                            <label for="id_name" class="control-label col-md-4"> Name</label>
                            <div class="controls col-md-8 ">
                                <input class="input-md emailinput form-control margin-bottom" id="id_name" name="name" type="text" value="{{user.name}}" readonly/>
                            </div>     
                        </div>
                        <div id="div_id_username" class="form-group required">
                            <label for="id_pusername" class="control-label col-md-4">User Name</label>
                            <div class="controls col-md-8 "> 
                                <input class="input-md textinput textInput form-control margin-bottom" id="id_username" name="username" value="{{user.userName}}"readonly />
                            </div>
                        </div>

                        <div class="form-group"> 
                            <div class="aab controls col-md-4 "></div>
                            <div class="controls col-md-8 ">
                                <input type="submit" name="Create" value="Create Ticket" class="btn btn-primary btn btn-info" id="submit-id-signup" />
                                  <input type="submit" name="Manage" id = "manageTicket" value="Manage Ticket" class="btn btn-primary btn btn-info" id="submit-id-signup" />
                            </div>
                        </div> 
                    </form>
                </form>
            </div>
        </div>
    </div> 
</div>
</div>     
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $('#manageTicket').on('click',function(e){
        e.preventDefault();
        $('#createForm').attr('action','listTicket');
        $('#createForm').submit();
    });
    </script>
{% endblock %}